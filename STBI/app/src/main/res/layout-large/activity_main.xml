<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rlard.rlard008.stbi.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/final_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="255dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnbegin"
                android:layout_marginLeft="78dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnfind"
                android:layout_marginLeft="225dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnjoinmentor"
                android:layout_marginLeft="242dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnminstitute"
                android:layout_marginLeft="78dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnupgradeskill"
                android:layout_marginLeft="225dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnjoininvester"
                android:layout_marginLeft="242dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <Button

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnbookresources"
                android:layout_marginLeft="78dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnupgrade"
                android:layout_marginLeft="225dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

