<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rlard.rlard008.stbi.Fragments.JoinAsMentor.MentorProfileAddDetailsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Personal Details"
        android:textSize="19dp"
        android:layout_marginTop="20dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="left"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Mobile No:"
        android:textSize="19dp"
        android:layout_marginTop="30dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="left"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addDetailsMob"
        android:textSize="17dp"
        android:layout_margin="5dp"
        android:hint="Add Your Mobile No"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Email Id:"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="left"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addDetailsEmail"
        android:textSize="17dp"
        android:layout_margin="5dp"
        android:hint="Add Your Email Id:"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Address"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:textColor="#0d0d0d"
        android:layout_gravity="left"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addDetailsAddress"
        android:textSize="17dp"
        android:layout_margin="5dp"
        android:hint="Add Your Address"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addDetails_btn_cancel"
            android:text="Cancel"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttonstyle"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addDetails_btn_save"
            android:text="Save"
            android:layout_gravity="right"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttonstyle"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
