<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rlard.rlard008.stbi.Fragments.JoinAsMentor.Mentor_CourseDesignFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="5dp">

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/mentor_course_AddDetails"
                android:text="Add Course Details"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonstyle"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Details"
                android:textSize="19dp"
                android:layout_marginTop="30dp"
                android:textColor="#0d0d0d"
                android:layout_gravity="left"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Name of Course:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your School / College Name"
                    android:id="@+id/tvName"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Description of Course:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Degree"
                    android:id="@+id/tvDescription"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Select Level:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Degree"
                    android:id="@+id/tvLevel"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Prerequisite:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Grade"
                    android:textSize="8pt"
                    android:id="@+id/tvPrerequisite"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Duration:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Time Period"
                    android:textSize="8pt"
                    android:id="@+id/tvDuration"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Credit:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Description"
                    android:id="@+id/tvCredit"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Objectives:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Your Description"
                    android:id="@+id/tvObjectives"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Outcome:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Your Description"
                    android:id="@+id/tvOutcome"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Modules:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Description"
                    android:id="@+id/tvModules"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Course Lab work / Equipments / Tools:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Description"
                    android:id="@+id/tvTools"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Reference Book / Link:"
                    android:textSize="8pt"
                    style="?android:textAppearanceMedium"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Description"
                    android:id="@+id/tvRefrence"
                    android:textSize="8pt"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
