<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c8c8ac">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleofidea1"
                android:text="Title Of Event"
                android:textSize="17dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                />
-->
            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/event_title"
                android:text="TITLE OF IDEA"
                android:textSize="17dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expand_button"
                android:background="@drawable/expand1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>



        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/event_expand"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="120dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date1"
                    android:text="Date"
                    android:textSize="17dp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_date"
                    android:text="Date"
                    android:textSize="17dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="80dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">


                <Button
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_interested"
                    android:text="I am Interested"
                    android:textStyle="bold"
                    android:textColor="#5891e1"
                    android:background="@drawable/find_buttonstyle"
                    style="?android:textAppearanceSmall"
                    android:layout_marginLeft="190dp"

                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>