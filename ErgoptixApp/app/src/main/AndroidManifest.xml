<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prasanna.rlard008.ergoptixapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="Ergoptix"
        android:roundIcon="@drawable/icon1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/your_own_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubmitTTLRequestActivity"
            android:label="Enter your details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CalcEyeDistanceActivity"
            android:label="Enter your details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkingDistanceActivity"
            android:label="Enter your details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutUSActivity"
            android:label="About Us" />
        <activity
            android:name=".LearnActivity"
            android:label="Learn"
            android:screenOrientation="landscape"
            android:theme="@style/your_own_name" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/your_own_name" />
        <activity
            android:name=".MicroscopeRequestActivity"
            android:label="choose your Microscope"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModelA_Accessories"
            android:label="choose your Accessories"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModelB_Accessories"
            android:label="choose your Accessories"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SubmitAccessoryActivity"
            android:label="Enter your details"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShowFinalPriceActivity"
            android:label="Choose your offer"
            android:screenOrientation="portrait"/>
    </application>

</manifest>