<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8c8ac">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ideaId1"
                android:text="ID"
                android:textSize="17dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ideaIdSkill"
                android:text="Date"
                android:textSize="17dp"
                android:textStyle="italic"
                android:layout_marginLeft="100dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expand_button"
                android:background="@drawable/expand1"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="100dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleofidea1"
                android:text="LIST OF PROGRAM"
                android:textSize="17dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                />
-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleofSkill"
                android:text="TITLE OF IDEA"
                android:textSize="17dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/event_expand">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="130dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date1"
                    android:text="DATE "
                    android:textSize="17dp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateSkill"
                    android:text="Date"
                    android:textSize="17dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="80dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

      <!--      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="120dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status1"
                    android:text="Status"
                    android:textSize="17dp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusProject"
                    android:text="Status"
                    android:textSize="17dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="65dp"
                    android:textColor="#5891e1"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvApply"
                    android:text="Apply"
                    android:textSize="17dp"
                    android:textStyle="normal|bold"
                    android:background="#33b5e5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"

                    android:gravity="center"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvupdateProgress"
                    android:text="Update Progress"
                    android:textSize="17dp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#f2b009"
                    android:layout_marginTop="5dp"

                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trash"

                    android:layout_marginLeft="15dp"
                    android:background="@drawable/trash"
                    android:layout_marginTop="1dp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>