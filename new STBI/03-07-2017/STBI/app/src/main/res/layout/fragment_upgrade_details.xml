<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rlard.rlard008.stbi.Fragments.UpgradeSkills.UpgradeDetailsFragment"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="3dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Course"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeCourseName"
                android:background="#e1e1de"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Description"
                android:textSize="17dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/tvUpgradeDesc"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Level"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeLevel"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Prerequisite"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradePrerequisite"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Duration"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeDuration"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Credit"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeCredit"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upgrade_btn_next"
                android:text="Next"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>


