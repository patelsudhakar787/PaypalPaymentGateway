<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rlard.rlard008.stbi.Fragments.UpgradeSkills.UpgradeDetails2Fragment"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="3dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Objective"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeObjective"
                android:background="#e1e1de"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Outcome"
                android:textSize="17dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeOutcome"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Modules"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeModules"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Lab Work / Equipments / Tools"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeTools"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference Book / Link"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#0d0d0d"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpgradeLinks"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:background="#e1e1de"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upgrade_btn_apply"
                android:text="Apply"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
