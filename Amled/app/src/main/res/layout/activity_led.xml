<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amled.rlard008.amled.activities.ChooseLEDActivity"
    android:orientation="vertical"
    android:weightSum="5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:text="Configuration"
                android:textSize="17dp"
                android:textColor="#161615"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check"
                android:layout_toRightOf="@+id/base2"
                android:layout_marginLeft="180dp"
                android:text="Select"
                android:textSize="17dp"
                android:textColor="#161615"
                android:textStyle="normal|bold"
                />
        </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="17dp"
    android:textColor="#131312"
    android:background="#f5be06"
    android:layout_margin="5dp"
    android:id="@+id/textlength1"
    android:textStyle="bold|italic"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_margin="5dp">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
     />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#131312"
        android:background="#f5be06"
        android:layout_margin="5dp"
        android:id="@+id/textlength2"
        android:textStyle="bold|italic"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_margin="5dp">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        />
    </android.support.v7.widget.CardView>



</LinearLayout>
